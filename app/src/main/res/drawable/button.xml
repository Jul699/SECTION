<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    <!-- Transparent layer for shadow -->
    <item>
        <shape>
            <solid android:color="#00000000" /> <!-- Transparent color -->
            <corners android:radius="15dp" />
        </shape>
    </item>
    <!-- Gray shadow -->
    <item android:left="10dp" android:top="10dp">
        <shape>
            <solid android:color="#3D000000" /> <!-- Gray color for shadow -->
            <corners android:radius="15dp" />
        </shape>
    </item>
    <!-- White foreground -->
    <item android:bottom="8dp" android:right="6dp">
        <shape>
            <solid android:color="#FFFFFF" /> <!-- White color for foreground -->
            <corners android:radius="15dp" />
        </shape>
    </item>
</layer-list>

